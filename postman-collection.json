{
  "info": {
    "name": "Teleop Robot API",
    "description": "API endpoints for testing the Teleop Robot backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["health"]
        }
      }
    },
    {
      "name": "API Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/api/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Get Auth Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "ApiKey test-api-key-123"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"test-user\",\n  \"scopes\": [\"robot:read\", \"robot:control\"]\n}"
        },
        "url": {
          "raw": "http://localhost:3001/api/auth/token",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "auth", "token"]
        }
      }
    },
    {
      "name": "Verify Token",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/auth/verify",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "auth", "verify"]
        }
      }
    },
    {
      "name": "WebSocket Stats",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/websocket/stats",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "websocket", "stats"]
        }
      }
    },
    {
      "name": "Fleet Stats",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/fleet/stats",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "fleet", "stats"]
        }
      }
    },
    {
      "name": "Fleet Health",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/fleet/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "fleet", "health"]
        }
      }
    },
    {
      "name": "Send Velocity Command",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"vx\": 0.1,\n  \"vy\": 0.1,\n  \"levels\": {\n    \"up\": 1,\n    \"down\": 0,\n    \"left\": 0,\n    \"right\": 1\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:3001/api/vel",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "vel"]
        }
      }
    },
    {
      "name": "Get Velocity Logs",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/logs?limit=10&skip=0",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "logs"],
          "query": [
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "skip",
              "value": "0"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ]
}
