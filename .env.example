# =============================================================================
# TELEOP ROBOT SYSTEM - CONSOLIDATED ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# SERVICE PORTS
# -----------------------------------------------------------------------------
WEB_PORT=5000
NODE_PORT=3001
FLEET_PORT=8000
MONGO_PORT=27017
ZENOH_PORT=7447
ZENOH_REST_PORT=8080

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
FLEET_HOST=0.0.0.0
DEBUG=true
RELOAD=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
MONGO_URI=mongodb://mongo:27017/teleop_db
MONGO_INITDB_DATABASE=teleop_db

# -----------------------------------------------------------------------------
# API URLS (Internal Docker Network)
# -----------------------------------------------------------------------------
FLEET_API_URL=http://fleet-api:8000
NODE_API_URL=http://node-api:3001
NODE_WS_URL=ws://node-api:3001

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://node-api:3001
NEXT_PUBLIC_WS_URL=ws://node-api:3001
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_WS_ENABLED=false
NODE_ENV=development

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:5000
CORS_ORIGINS=http://localhost:5000,http://localhost:3001

# -----------------------------------------------------------------------------
# VELOCITY LIMITS (m/s)
# -----------------------------------------------------------------------------
VX_MAX=1.0
VY_MAX=1.0

# -----------------------------------------------------------------------------
# ZENOH CONFIGURATION
# -----------------------------------------------------------------------------
ZENOH_LOCATOR=tcp/zenoh:7447
Z_KEY_CMD_VEL=cmd_vel
RUST_LOG=info

# -----------------------------------------------------------------------------
# ROS2 CONFIGURATION
# -----------------------------------------------------------------------------
ROS_DOMAIN_ID=0
ROS_DISTRO=humble
ROS_LOCALHOST_ONLY=0
RMW_IMPLEMENTATION=rmw_fastrtps_cpp
FASTRTPS_DEFAULT_PROFILES_FILE=/fastdds-config.xml

# -----------------------------------------------------------------------------
# AUTHENTICATION CONFIGURATION
# -----------------------------------------------------------------------------
AUTH_ENABLED=true
API_KEYS=test-api-key-123,admin-key-456
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
RUST_LOG_BRIDGE=debug